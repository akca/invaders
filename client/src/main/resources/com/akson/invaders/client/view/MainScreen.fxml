<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="800.0" maxWidth="600.0" minHeight="800.0" minWidth="600.0"
          prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          fx:controller="com.akson.invaders.client.controller.MainScreenController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="261.0" minHeight="10.0" prefHeight="95.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="439.0" minHeight="10.0" prefHeight="439.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label text="INVADERS!">
        <font>
            <Font name="Verdana" size="90.0"/>
        </font>
        <effect>
            <DropShadow blurType="ONE_PASS_BOX" color="RED" height="30.0" radius="14.5" spread="1.0" width="30.0"/>
        </effect>
    </Label>
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.rowIndex="1">
        <Button minWidth="300" mnemonicParsing="false" onAction="#goToSinglePlayer" text="Singleplayer">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button minWidth="300" mnemonicParsing="false" onAction="#goToSinglePlayer" text="Highscore">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button minWidth="300" mnemonicParsing="false" onAction="#goToMultiPlayer" text="Multiplayer">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button minWidth="300" mnemonicParsing="false" onAction="#goToSinglePlayer" text="Exit">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
    </VBox>
</GridPane>
